{
  "id": "ohmyzsh",
  "version": "1.1.3",
  "name": "Oh My Zsh",
  "description": "Installs and configures Oh My Zsh in the dev container",
  "mounts": [
      {
         "target": "/root/.oh-my-zsh/custom/plugins",
         "source": "/root/.oh-my-zsh/custom/plugins",
         "type": "bind"
      },
      {
         "target": "/root/.zsh_history",
         "source": "/root/.zsh_history",
         "type": "bind"
      },
      {
         "target": "/root/.zshrc",
         "source": "/root/.zshrc",
         "type": "bind"
      }
  ],
  "options": {
     "theme":{
        "type": "string",
        "enum": ["robbyrussell","af-magic","afowler"],
        "default": "afowler"
     },
     "plugins":{
          "type": "string",
          "default":"vscode vi-mode"    
     },
     "zshrc_append":{
        "type":"string",
        "default":""
     },
     "install_dependencies":{
      "type": "boolean",
      "default":true
     }
  }
  
}
